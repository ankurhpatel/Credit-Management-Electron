{
  "name": "it-services-credit-management",
  "version": "2.0.0",
  "description": "IT Services Credit Management System - Desktop Edition",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"nodemon --watch src/main src/main/main.js --exec electron .\" \"echo Starting Electron Development Mode...\"",
    "build": "electron-builder",
    "postinstall": "echo No native modules to rebuild"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "multer": "^1.4.4",
    "csv-parser": "^3.0.0",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5",
    "nodemon": "^3.1.4",
    "concurrently": "^9.0.1"
  },
  "build": {
    "appId": "com.itservices.management",
    "productName": "ITSM",
    "executableName": "ITSM",
    "directories": {
      "output": "build"
    },
    "icon": "assets/icon.png",
    "files": [
      "src/**/*",
      "database/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "IT Services Management",
      "artifactName": "ITServices_Setup.${ext}"
    },
    "msi": {
      "oneClick": false,
      "shortcutName": "IT Services Management",
      "artifactName": "ITServices.${ext}"
    }
  },
  "keywords": [ "electron", "desktop", "subscription", "management" ],
  "author": "Your Name",
  "license": "ISC"
}
